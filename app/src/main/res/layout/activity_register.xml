<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register"
    android:padding="20sp"
    android:background="#FFFFFF">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        >

        <TextView
            android:id="@+id/registerHead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            android:layout_centerHorizontal="true"
            android:textSize="35sp"
            android:textColor="#FFA500"
            android:textFontWeight="1000"
            android:layout_marginBottom="25sp"
            android:layout_alignParentRight="true"
            />


        <EditText
            android:id="@+id/emailAdd"
            android:layout_width="match_parent"            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_border"
            android:padding="10sp"
            android:hint="Email Address"
            android:layout_below="@+id/registerHead"
            android:layout_marginTop="15sp"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            />

        <EditText
            android:id="@+id/firstPass"
            android:layout_width="match_parent"            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_border"
            android:padding="10sp"
            android:hint="Password"
            android:inputType="textPassword"
            android:layout_below="@+id/emailAdd"
            android:layout_marginTop="15sp"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            />

        <EditText
            android:id="@+id/confPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_border"
            android:padding="10sp"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:layout_below="@+id/firstPass"
            android:layout_marginTop="15sp"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/accLay"
            android:layout_below="@+id/confPass"
            android:layout_marginTop="10sp"
           >

        <TextView
            android:id="@+id/loginLinkSide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have a account? "
            android:layout_marginTop="20sp"
            android:textSize="18sp"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/loginLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:layout_marginTop="20sp"
            android:layout_toRightOf="@id/loginLinkSide"
            android:textColor="#4169E1"
            android:textSize="18sp"
            />

        </RelativeLayout>

        <Button
            android:id="@+id/registerBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            android:layout_below="@+id/accLay"
            android:layout_marginTop="20sp"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/black"
            android:backgroundTint="@android:color/holo_orange_light"
            android:width="200sp"
            android:textSize="20sp"
            />

    </RelativeLayout>


</RelativeLayout>