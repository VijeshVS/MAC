<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login"
    android:padding="20dp"
    android:background="#FFFFFF"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/relInput">

    <EditText
        android:id="@+id/edtTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:hint="Enter your Email"
        android:layout_below="@id/ologo"
        android:background="@drawable/edit_text_border"
        android:padding="10sp"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        />



    <EditText
        android:layout_marginTop="10sp"
        android:id="@+id/edtPass"
        android:hint="Enter your password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_below="@id/edtTxt"
        android:background="@drawable/edit_text_border"
        android:padding="10sp"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        />

    <Button
        android:layout_width="200sp"
        android:layout_height="55sp"
        android:text="Login"
        android:textSize="20sp"
        android:id="@+id/logButt"
        android:layout_below="@id/edtPass"
        android:layout_marginTop="18sp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@android:color/holo_orange_light"
        android:drawablePadding="20sp"
        android:textColor="#000000"

        />

    <ImageView
        android:id="@+id/ologo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/orangelogo"
        android:layout_centerHorizontal="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="15sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relInput"
        >
        <TextView
            android:id="@+id/newUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New User?"
            android:textSize="18sp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/registerLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@id/newUser"
            android:text="Register"
            android:textColor="#4169E1"
            android:textSize="18sp"
            />

    </RelativeLayout>



</RelativeLayout>