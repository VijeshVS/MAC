<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFA500"/> <!-- Set your desired background color -->
        </shape>
    </item>

    <!-- Bottom line -->
    <item android:top="0dp" android:left="0dp" android:right="0dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Set your desired line color -->
        </shape>
    </item>
</layer-list>